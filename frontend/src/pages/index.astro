---
import CountdownTimer from "../components/CountdownTimer.jsx";
import "../styles/main.css";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admission Countdown</title>
</head>
<body class="bg-white text-gray-900">
  <header class="p-4 flex justify-between items-center border-b">
    <img src="/logo.png" alt="University Logo" class="h-12">
    <button class="bg-orange-500 text-white px-4 py-2 rounded-md">Sign in</button>
  </header>

  <main class="flex flex-col items-center justify-center min-h-screen px-6 text-center">
    <h1 class="text-3xl font-bold text-orange-600 uppercase">
      Application for <span class="font-extrabold">2024/2025</span> Admission is yet to commence
    </h1>
    <p class="text-gray-600 mt-2">We are not accepting applications at this time. Please check back in:</p>

    <!-- Countdown Timer -->
    <CountdownTimer />

    <!-- Form -->
    <form class="mt-6 space-y-4 w-full max-w-md">
      <div>
        <label class="block text-left font-semibold">Email Address*</label>
        <input type="email" placeholder="Enter email address" 
          class="w-full p-3 border rounded-md focus:ring-2 focus:ring-orange-500">
      </div>

      <div>
        <label class="block text-left font-semibold">Mobile Number*</label>
        <input type="tel" placeholder="Mobile number" 
          class="w-full p-3 border rounded-md focus:ring-2 focus:ring-orange-500">
      </div>

      <button type="submit" class="w-full bg-orange-500 text-white py-3 rounded-md flex items-center justify-center">
        ðŸ”” Notify Me
      </button>
    </form>
  </main>
</body>
</html>
